<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".RecipeDetailActivity">

    <TextView
        android:id="@+id/tv_frame_avopo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/img_frameavo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/tv_frame_avopo"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_frame_avopo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/tv_frame_avopo"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/recipe_ingredients_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/tv_frame_avopo1"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/recipe_ingredients_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/recipe_ingredients_label"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/recipe_instructions_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/recipe_ingredients_text_view"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/recipe_instructions_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/recipe_instructions_label"/>

</RelativeLayout>
