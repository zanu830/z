<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".salty_food"
    android:background="@drawable/back_4">

    <ImageView
        android:id="@+id/img_dish1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/dish3" />
    <ImageView
        android:id="@+id/img_dish2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="135dp"
        android:src="@drawable/dish2"
        android:layout_below="@id/img_dish1"
        />
<ImageView
    android:id="@+id/img_dishere"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/img_dish2"
    android:src="@drawable/dish3"
    android:layout_marginStart="135dp"
    android:layout_marginTop="20dp"
    />


<TextView
    android:id="@+id/tv_chef"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/img_dishere"
    android:text="@string/tv_personal"
    android:textColor="@color/white"
    android:textSize="35sp"
    android:layout_marginTop="30dp"
   android:textAlignment="center"
    android:textStyle="bold"
    android:layout_marginStart="80dp"
    android:fontFamily="@font/dancing"
    android:layout_marginEnd="90dp"
    android:layout_centerHorizontal="true"

    />


</RelativeLayout>