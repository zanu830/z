<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".share_recipe"
    android:background="@drawable/back_6"
    >
<ImageView
    android:id="@+id/img_res"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="135dp"
    android:layout_marginTop="50dp"
    android:src="@drawable/dish3"
    />
<ImageView
    android:id="@+id/img_res2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="135dp"
    android:src="@drawable/dish2"
    android:layout_below="@id/img_res"
    />
    <ImageView
        android:id="@+id/img_res3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="135dp"
        android:src="@drawable/dish3"
        android:layout_below="@id/img_res2"
        />
    <TextView
        android:id="@+id/tv_recipe_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_recipes"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_res3"
        android:fontFamily="@font/dancing"
        />

</RelativeLayout>