<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/img_base3"
        android:layout_width="560dp"
        android:layout_height="500dp"
        android:src="@drawable/head_base3"
        android:layout_marginBottom="490dp"
        />
    <ImageView
        android:id="@+id/img_white_base"
        android:layout_width="750dp"
        android:layout_height="750dp"
        android:src="@drawable/head_base2"
        android:layout_marginTop="140dp"
        />
    <ImageView
        android:id="@+id/img_sign_logo"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:src="@drawable/download_logo"
        android:layout_marginTop="190dp"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/tv_sign_up_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_txt"
        android:fontFamily="@font/dancing"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="260dp"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/et_email1"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/custom_transcore"
        android:hint="Email"
        android:textColor="@color/black"
        android:paddingStart="20dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/et_pass_1"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="415dp"
        android:background="@drawable/custom_transcore"
        android:hint="Create a Password"
        android:paddingStart="20dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/et_verify_pass"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="468dp"
        android:background="@drawable/custom_transcore"
        android:hint="Verify Password"
        android:paddingStart="20dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_btn_blck"
        android:text="@string/btn_up"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="530dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:id="@+id/lay_account_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/btn_sign_up"
        >

        <TextView
            android:id="@+id/tv_account3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_6"
            android:fontFamily="@font/aqrada"
            android:textSize="9sp"
            android:textColor="@color/black"
            android:layout_marginStart="150dp"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:id="@+id/tv_sign_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_2"
            android:fontFamily="@font/aqrada"
            android:textSize="9sp"
            android:textColor="@color/blue"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            />

    </LinearLayout>
</RelativeLayout>